<div class="box">
  <h2>All News</h2>
  <% @news.each do |news| %>
      <div>
        <h3><%= link_to news.title, news %></h3>
        <p>By <% if news.user.nil? or news.user.name.empty? %> Anon <% else %> news.user.name <% end %> at <%= news.created_at %></p>
        <p><%= news.text %></p>
        <% if user_signed_in? and current_user.admin? %>
        <p><%= link_to 'Edit', edit_news_path(news) %> | <%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></p>
        <% end %>
      </div>
      <hr />
    <% end %>
<%= link_to 'New News', new_news_path %>
</div>